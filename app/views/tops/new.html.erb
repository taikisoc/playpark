<div class="container-every">
  <div class="row">
    <div class="event-form-field clearfix from-group">
      <div class="col-md-12">
        <%= form_tag("/tops" , method: :post, multipart: true) do %>
          <div class="event-form-left">
            <div>
            <label for="" class="control-label">開催場所</label>
                <%= text_field_tag :event_place, nil ,:size=>"25", :required => true %>
            </div>
            <div>
              <label for="" class="control-label">何した？</label>
                <%= text_field_tag :event_what, nil ,:size=>"25", :required => true %>
            </div>
            <div>
              <label for="" class="control-label">最寄り駅</label>
                <%= text_field_tag :event_station, nil ,:size=>"25", :required => true %>
            </div>
            <div>
              <label for="" class="control-label">開催時間</label>
                <%= time_field_tag :event_time, nil ,:size=>"25", :required => true %>
            </div>
            <div>
              <label for="" class="control-label">開催日：</label>
                <%= date_field_tag :event_date, nil ,:size=>"25", :required => true %>
            </div>
            <div>
            <label for="" class="control-label">スタッフ、ゲスト</label>
                <%= text_field_tag :event_people, nil ,:size=>"25" %>
            </div>
            <div>
              <label for="" class="control-label">持ち物</label>
                <%= text_field_tag :event_bring, nil ,:size=>"25"%>
            </div>
            <div>
              <label for="" class="control-label">イベント画像1</label>
                <%=file_field_tag :event_img1 %>
            </div>
             <div>
              <label for="" class="control-label">イベント画像2</label>
                <%=file_field_tag :event_img2 %>
            </div>
            <div>
              <label for="" class="control-label">イベント画像3</label>
                <%=file_field_tag :event_img3 %>
            </div>
          </div>
          <div class="event-form-right">
            <div>
              <label for="" class="control-label">公園画像</label>
                <%= file_field_tag :event_p_img  %>
            </div>
            <div>
              <label for="" class="control-label">その他</label>
                <%= text_area_tag :event_else %>
            </div>
            <div>
              <p>
                <input type="submit" value="送信する">
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>