<div>
  <% if @user.fullname.blank? %>
      <h3><%= @user.nickname %>さんのスケジュール</h3>
  <% else %>
      <h3><%= @user.fullname %>さんのスケジュール</h3>
  <% end %>
</div>
<%= form_tag("/students/#{@user.id}/schedules", method: :post) do %>
  <div>
    <p>
      聞きたい内容：
      <%= text_field_tag :ask_about, nil, :required => true %>
   </p>
  </div>
  <div>
    <p>

      希望場所：<%= text_field_tag :where_go, nil, :required => true%>
    </p>
  </div>
  <div>
    <p>
      自己紹介：<%= text_field_tag :introduction, nil, :required => true %>
    </p>
  </div>
    <p>
      <input type="submit" value="送信する">
    </p>
<% end %>



